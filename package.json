{
  "name": "@meta-muse/private",
  "description": "",
  "author": "Innei <https://innei.in>",
  "private": true,
  "license": "MIT",
  "packageManager": "pnpm@8.7.6",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --ignore-path ./.prettierignore --write ",
      "eslint --cache --fix"
    ]
  },
  "bump": {
    "before": [
      "git pull --rebase"
    ]
  },
  "scripts": {
    "prepare": "if [ \"$NODE_ENV\" = \"production\" ]; then echo 'skip prepare in production' ;else corepack enable && husky install; fi",
    "prebuild": "rimraf dist",
    "build": "pnpm -C \"apps/core\" run build",
    "dev": "pnpm -C \"apps/core\" run start",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "pnpm -C \"test\" run test",
    "generate": "drizzle-kit generate:pg"
  },
  "dependencies": {
    "cross-env": "7.0.3",
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "@innei/bump-version": "^1.5.10",
    "@innei/eslint-config-ts": "^0.12.0",
    "@innei/prettier": "^0.12.0",
    "@nestjs/cli": "10.2.1",
    "@nestjs/schematics": "10.0.3",
    "dotenv-cli": "7.3.0",
    "drizzle-kit": "0.20.6",
    "eslint": "^8.55.0",
    "fastify": "^4.24.3",
    "husky": "8.0.3",
    "lint-staged": "15.2.0",
    "prettier": "3.1.1",
    "rimraf": "5.0.5",
    "ts-loader": "9.5.1",
    "tsconfig-paths": "4.2.0",
    "typescript": "^5.3.3",
    "zx": "7.2.3"
  },
  "resolutions": {
    "pino": "./external/pino",
    "*>typescript": "^5.2.2",
    "*>lodash": "4.17.21"
  },
  "redisMemoryServer": {
    "downloadDir": "./tmp/redis/binaries",
    "version": "6.0.10",
    "disablePostinstall": "1",
    "systemBinary": "/opt/homebrew/bin/redis-server"
  }
}